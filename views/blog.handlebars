<div container class="blogcontainer">
  <div class="card" id="blogbody">
    <div class="text-center">
      <h1 class="blog-title">{{name}}<i class="fa fa-thin fa-seedling"></i></h1>
      <p class="blog-text">{{description}}</p>
      <p>Created by {{user.name}} on {{format_date date_created}}</p>
      <p>
        <button class="btn btn-primary" id="comment">Leave a comment!</button>
      </p>
    </div>
  </div>
</div>

<div class="form-group">
  <label for="project-desc">Text:</label>
  <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
</div>

<script src="/js/comment.js"></script>