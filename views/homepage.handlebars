{{!-- When you log in you should be able to see whatever you have saved. We need a clickable area to see the previous
blogposts. --}}


<div class="col-md">
  <h4>Media Library</h4>
  <button id="open-btn" class="cloudinary-button">View Our Library!</button>
  <script src="https://media-library.cloudinary.com/global/all.js"></script>
</div>
<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}
<div class="row">
  {{!-- <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4> --}}
  <div class="col-md">
    <p>
    <div class="card-blogs" style="width: 25rem;">
      {{!-- <img class="card-img-top" src="..." alt="Card image cap"> --}}
      <div class="card-body" id="card">
        <h5 class="card-title">
          <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
        </h5>
        <p class="card-text">{{blog.description}}</p>
        <p class="card-text">Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>

    </p>
</div> --}}

